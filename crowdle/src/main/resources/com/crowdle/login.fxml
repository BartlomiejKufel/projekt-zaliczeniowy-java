<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<GridPane prefHeight="720" prefWidth="1280"
          xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.crowdle.LoginController">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
    <columnConstraints>
        <ColumnConstraints  maxWidth="320.0" minWidth="10.0" prefWidth="620.0" />
        <ColumnConstraints  maxWidth="640.0" minWidth="10.0" prefWidth="620.0" />
        <ColumnConstraints  maxWidth="320.0" minWidth="10.0" prefWidth="620.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="200.0"  />
        <RowConstraints minHeight="10.0" prefHeight="460.0"  />
        <RowConstraints minHeight="10.0" prefHeight="60.0"  />
    </rowConstraints>


    <HBox alignment="center" GridPane.rowIndex="0" GridPane.columnIndex="1">
        <VBox alignment="center">
            <ImageView fx:id="logoImage"
                       preserveRatio="true"/>
        </VBox>
    </HBox>


    <HBox alignment="center" GridPane.rowIndex="1" GridPane.columnIndex="1"
          style="-fx-padding: 70 0 0 0;">
        <VBox spacing="20" >
                <Label text="Nazwa użytkownika"/>
                <TextField fx:id="usernameField" promptText="Wprowadź nazwę użytkownika"
                           prefWidth="250" alignment="center"/>

                <Label text="Hasło" />
                <PasswordField fx:id="passwordField" promptText="Wprowadź hasło"
                               prefWidth="250" alignment="center"/>

                <CheckBox fx:id="keepLoggedCheckBox" text="Zapisz dane logowania" />
                <Button onAction="#LoginSubmitButtonClick" text="Zaloguj"/>
                <Label text="Zarejestruj się" underline="true" />
        </VBox>
    </HBox>










</GridPane>
